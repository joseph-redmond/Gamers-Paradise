<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no" />
    <title>@ViewData["Title"] - gaming_full_stack_website</title>
	<link rel="stylesheet" type="text/css" href="/css/bootstrap/bootstrap.min.css">
    <link href="/images/favicon/favicon-16x16.png" rel="shortcut icon">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="/css/community/community.css">

</head>

<body> 
    <section id="slider">
        <partial name="_TopMenu" />   
     	<div class="slider-content">
			<div class="container">
				<div class="row">
					<div class="col-md-6">
						<div class="text">
							<h1>Warriors Community</h1>
							<h4>World Best Gamers</h4>
							<p>We are the group of world best gamers. You can get any type of game info for world class gamers at one place. Join team watch live!</p>
							<a href="register.html" class="register-button"><img alt="Image Title" src="/images/slider/registerbutton.png"></a>
						</div>

					</div>
				</div>
			</div>
			<img alt="Image Title" src="/images/slider/1130x900.png" class="main-img">
		</div>
   
    </section>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <partial name="_Footer" />
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

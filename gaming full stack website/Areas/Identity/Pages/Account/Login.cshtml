@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<!--login -->
			<section id="login">
				<div class="row">
					<div class="col-md-5">
						<!--login form -->
						<form class="form mt-5" method="post" id="account">
                            <div asp-validation-summary="All" class="text-danger"></div>
							
                            <h2 class="form-heading">
								LOGIN
								<div class="float-right text-right sign-up">
									<p class="no-account mb-0">No Account ?</p>
									<a href="register.html" class="">Sign Up</a>
								</div>
								<div class="clearfix"></div>
							</h2>
							<div class="row social-buttons">
								<div class="col-6 pr-2">
									<a href="javascript:;">
										<i class="fa fa-google fa-fw"></i> <span>LOGIN with Google</span>
										<div class="clearfix"></div>
									</a>
								</div>
								<div class="col-6 pl-2">
									<a  href="javascript:;">
										<i class="fa fa-facebook fa-fw"></i> <span>LOGIN with Facebook</span>
										<div class="clearfix"></div>
									</a>
								</div>
							</div>

							<div class="form-group">
								<label asp-for="Input.Email">Email</label>
								<input type="text" asp-for="Input.Email" class="form-control" placeholder="Email">
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
							<div class="form-group">
								<label class="btn-block" asp-for="Input.Password">Password <a asp-page="/ForgotPassword"class="forget-pwd float-right">Forgot Password ?</a></label>
								<input type="text" asp-for="Input.Password" class="form-control" placeholder="password">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
							</div>
							<div class="text-center">

								<button type="submit" class="flayer-button">Login</button>
							</div>
						</form>
					</div>
					<div class="col-md-7 text-right">
						<img alt="Image Title" src="/images/login/635x600.png" class="login-img">
					</div>
				</div>
			</section>
